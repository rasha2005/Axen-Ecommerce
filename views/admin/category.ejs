<div class="card-body">
    <div class="table-responsive">
        <% const usersPerPage = 6; %>
        <% const totalPages = Math.ceil(category.length / usersPerPage); %>
        <% const currentPage = req.query.page || 1; %>
        <% const startIndex = (currentPage - 1) * usersPerPage; %>
        <% const endIndex = Math.min(startIndex + usersPerPage, category.length); %>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i = 0; i < category.length; i++) { %>
                <tr>
                    <td>
                        <img src="/catimages/<%= category[i].img %>" alt="<%= category[i].img %>" style="max-width: 100px;">
                    </td>
                    <td><%= category[i].category %></td>
                    <td>
                        <a href="/admin/editCategory/<%= category[i]._id %>" class="btn btn-sm" style="background-color: #089ec4; color: #ffffff; border: 1px solid #089ec4;">
                            Edit
                        </a>
                        <form action="/admin/catUnlist" method="post" style="display: inline;">
                            <input type="hidden" name="categoriesId" value="<%= category[i]._id %>">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Unlist
                            </button>
                        </form>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>


