<form action="" method="post" id="categoryForm"  enctype="multipart/form-data">
    <div class="col-lg-6">
        <div class="card mb-4">
            <div class="card-body">
                <div class="mb-4">
                    <label for="product_title" class="form-label" >Category Name</lab>
                    <input name="category" type="text" placeholder="Type here" class="form-control" id="product_title" >
                    <% if (typeof message !== 'undefined') { %>
                        <% if (message === 'Category name is required' || message === 'Category name already exists' ||  message === 'Category name should contain only characters') { %>
                            <p style="color: red;"><%= message %></p>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>
      
        <div class="card mb-4">
            <div class="card-body">
                <div>
                    <label class="form-label">Images</label>
                    <input name="img"  class="form-control" type="file" >
                    <% if (typeof message !== 'undefined') { %>
                        <% if (message === 'Image is required') { %>
                            <p style="color: red;"><%= message %></p>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-light rounded font-sm mr-5 text-body hover-up">Add</button>
    </div>
</form>
                        <!-- card end// -->
                    </div>
                    
                </div>
            </section>

