<%- include('../adminLayout/header.ejs') %>

<section class="content-main">
    <div class="row">
        <div class="col-9">
            <div class="content-header">
                <h2 class="content-title">Add category offer</h2>
                <!-- <div>
                    <button class="btn btn-light rounded font-sm mr-5 text-body hover-up">Add</button>
                    
                </div> -->
            </div>
        </div>
<form action="" method="post" >
<div class="col-lg-6">
<div class="card mb-4">
<div class="card-body">
    <div class="mb-4">
        <label for="product_title" class="form-label" >Product Name</label>
        <select name="product" class="form-select" required>
            <% for(let i=0; i<pro.length; i++) { %>
                <option value="<%= pro[i]._id %>"><%= pro[i].pname %></option>
            <% } %>
            
            

        </select>
        <% if (typeof message !== 'undefined') { %>
            <% if (message === 'Product title is required' || message === 'Product title already exists') { %>
                <p style="color: red;"><%= message %></p>
            <% } %>
        <% } %>
    <br><br>
        <label for="product_title" class="form-label" >offer</label>
            <input name="offer" type="text" placeholder="Type here" class="form-control" id="product_title" >
            <% if (typeof message !== 'undefined') { %>
                <% if (message === 'offer is required' || message === 'offer should not be a negative number' || message === 'Offer must be a number'||message === 'offer is above the limit') { %>
                    <p style="color: red;"><%= message %></p>
                <% } %>
            <% } %>
       
    </div>
</div>
</div>



<button type="submit" class="btn btn-light rounded font-sm mr-5 text-body hover-up">Add</button>
</div>
</form>
            <!-- card end// -->
        </div>
        
    </div>
</section>

