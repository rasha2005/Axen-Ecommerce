<%- include('../adminLayout/header.ejs') %>

<section>
    <div class="card-body">
        <div class="row gx-3 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 row-cols-xxl-5">
            <% for(let i=0; i<product.length; i++) { %>
                <div class="col">
                    <div class="card card-product-grid">
                        <a href="" class="img-wrap">
                            <img src="/catimages/<%= product[i].pimg[0] %>" alt="<%= product[i].pimg %>" />
                        </a>
                        <div class="info-wrap">
                            <a href="#" class="title text-truncate"><%= product[i].pname %></a>
                            <div class="price mb-2">$<%= product[i].price %></div>
                            <div class="price mb-2"><%= product[i].color %></div>
                            <div class="price mb-2"><%= product[i].category.category %></div>
                            <!-- Add other product information as needed -->
    
                            <!-- Edit and Delete buttons -->
                           
                            <form action="/admin/list" method="post" style="display: inline;">
                                <input type="hidden" name="productId" value="<%= product[i]._id %>">
                                <button type="submit" class="btn btn-sm font-sm btn-light rounded">
                                    list
                                </button>
                            </form>
                            
                        </div>
                    </div>
                    <!-- card-product end// -->
                </div>
            <% } %>
        </div>
    </div>
</section>

<%- include('../adminLayout/footer.ejs') %>