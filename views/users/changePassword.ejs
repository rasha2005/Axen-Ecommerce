<%- include('../layouts/header.ejs') %>

<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #e7ebe9; /* Set a different background color */
    }
    footer {
        background-color: #142429; /* Set the footer background color */
        color: white; /* Set text color for better readability */
        padding: 20px; /* Add padding for spacing */
        text-align: center; /* Align text to center */
    }

    .card-container {
        margin: 20px;
        padding: 20px;
        background-color: #ffffff;
        border: 1px solid #e7ebe9;
        border-radius: 8px;
    }

    .custom-table {
        display: block;
    }
    .login-account {
    padding: 30px;
     /* Change to a simple solid border */
    border-radius: 8px;
}

    .custom-column {
        float: left;
    }

    .custom-column:first-child {
        width: 33.33%;
    }

    .custom-column:last-child {
        width: 66.66%;
    }

    .custom-cell {
        padding: 10px;
        text-align: right;
    }

    .custom-menu {
        list-style-type: none;
        padding: 0;
        display: flex;
    }

    .custom-menu-item {
        margin-right: 20px;
    }

    .custom-menu-link {
        text-decoration: none;
        display: flex;
        align-items: center;
        padding: 10px;
        border-radius: 5px;
    }

    .custom-icon {
        margin-right: 10px;
    }

    /* Styles for the second card */
    .second-card-container {
        width: 90%;
        height: auto;
        margin: 20px;
        padding: 20px;
        background-color: #ffffff;
       
        border-radius: 5px;
    }

    .nested-card {
    width: 100%;
    height: auto;
    border: 3px solid #000; /* Change to a simple solid border */
    padding: 10px;
    box-sizing: border-box;
    border-radius: 8px;
    margin-top: 5px;
}
    .input-field {
        width: 100%;
        padding: 9px;
        margin-bottom: 20px;
        border: 1px solid #292525;
        border-radius: 4px;
        /* box-sizing: border-box; */
        outline: none;
        font-size: 14px;
    }

    .input-field:focus {
        border-color: #f1950b;
        border: 1px solid #292525;
    }

    .submit-btn-1 {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        background-color: #007bff;
        color: #fff;
    }

    .submit-btn-1:hover {
        opacity: 0.9;
    }
    .custom-menu-link span {
        font-size: 15px;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
    }
    
</style>
<div class="custom-table">
    <div class="custom-column">
        <div class="card-container">
            <div class="custom-cell">
                <nav class="custom-nav">
                    <ul class="custom-menu">
                        <li class="custom-menu-item">
                      
                            <a href="savedAddress" class="custom-menu-link">
                                <i class="zmdi zmdi-accounts-list-alt"></i>&nbsp;
                                <span>Saved Addresses</span>
                            </a>
                            
                            <a href="accountDetails" class="custom-menu-link">
                                <i class="zmdi zmdi-account"></i>&nbsp;
                                <span>Account details</span>
                            </a>
                            <a href="Orders" class="custom-menu-link">
                                <i class="zmdi zmdi-store"></i>&nbsp;
                                <span >Orders</span>
                            </a>
                            <a href="changePassword" class="custom-menu-link">
                                <i class="zmdi zmdi-key"></i>&nbsp;
                                <span >change password</span>
                            </a>
                            <a href="wallet" class="custom-menu-link">
                                <i class="zmdi zmdi-balance-wallet"></i>&nbsp;
                                <span >wallet</span>
                            </a>
                            <a href="refferalOffer" class="custom-menu-link">
                                <i class="zmdi zmdi-code"></i>&nbsp;
                                <span >Refferal Code</span>
                            </a>
                            
                        </li>
                        <!-- Add more menu items as needed -->
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    <div class="custom-column">
        <div class="second-card-container">
         
                <!-- Content for the nested card -->
             
                <form action="/changePassword" method="post" id="formid">
                    <h6 class="widget-title border-left mb-10">change password</h6>
                    <div class="login-account p-30 ">
                       
                        <div class="row">
                            <div class="col-sm-12" >
                               <h5 style="font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;">current password</h5>
                                <input type="password" name="current" placeholder="current password" value="<%= %>" required>
                           
                                <% if(typeof message !== 'undefined'){ %>
                                    <% if (message === 'invalid password') { %>
                                        <p style="color: rgb(230, 14, 14);"><%= message %></p>
                                    
                                    <% } %>
                                <% } %>
                          
                    </div>
                            <div class="col-sm-12">
                                <h5 style="font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;">new password</h5>
                                <input type="password" id="new-password" class="input-field" name="new" placeholder="new " value="<%=  %>" required>
                                
                            </div>

                            <div class="col-sm-12">
                                <h5 for="confirm-password"  style="font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;">confirm password</h5>
                                <input type="password" id="confirm-password" name="confirm" placeholder="confirm password" value="<%= %>" required>
                                
                            </div>
                            <span id="password-match-error" style="color: red; display: none;">Passwords do not match</span>
                           
                        </div>
                       
                       
                        <% if(typeof message !== 'undefined'){ %>
                            <% if (message === 'Password changed successfully') { %>
                                <p style="color: rgb(39, 230, 14);"><%= message %></p>
                            
                            <% } %>
                        <% } %>
                  
                        
                        
                    </div>
               

                <div class="row">
                    <div class="col-md-12">
                        <input class="submit-btn-1 mt-20 btn-hover-1" type="submit"  onclick="change(event,formid)" value="Add">
                    </div>
                </div>
            </form>
           
        </div>
    </div>
</div>

<script>
      const formid = document.getElementById('formid');

function change(event, formid) {
event.preventDefault();
const newpass = formid.querySelector('#new-password').value;
const confirmpass = formid.querySelector('#confirm-password').value;

if (newpass !== confirmpass) {
  document.getElementById('password-match-error').innerText = 'Passwords do not match';
  document.getElementById('password-match-error').style.display = 'block';
  return; // Prevent form submission
} else if (newpass.length < 8) {
  document.getElementById('password-match-error').innerText = 'Password must be at least 8 characters long';
  document.getElementById('password-match-error').style.display = 'block';
  return; // Prevent form submission
} else if (/\s/.test(newpass)) {
  document.getElementById('password-match-error').innerText = 'Password should not contain spaces';
  document.getElementById('password-match-error').style.display = 'block';
  return; // Prevent form submission
} else if (!/[!@#$%^&*()_+\-=\[\]{};':"\\|,.<>\/?]/.test(newpass)) {
  document.getElementById('password-match-error').innerText = 'Password should contain at least one special character';
  document.getElementById('password-match-error').style.display = 'block';
  return; // Prevent form submission
} else {
  document.getElementById('password-match-error').style.display = 'none';
  // Proceed with form submission logic if all conditions pass
  formid.submit();
}
}


document.getElementById('confirm-password').addEventListener('input', function() {
const newpass = formid.querySelector('#new-password').value;
const confirmpass = this.value;

if (newpass !== confirmpass || newpass.length < 8 || /\s/.test(newpass) || !/^[a-zA-Z0-9!@#$%^&*()_+\-=\[\]{};':"\\|,.<>\/?]*$/.test(newpass)) {
  if (newpass.length < 8) {
      document.getElementById('password-match-error').innerText = 'Password must be at least 8 characters long';
  } else if (/\s/.test(newpass)) {
      document.getElementById('password-match-error').innerText = 'Password should not contain spaces';
  } else if (!/[!@#$%^&*()_+\-=\[\]{};':"\\|,.<>\/?]/.test(newpass)) {
      document.getElementById('password-match-error').innerText = 'Password should contain at least one special character';
  } else {
      document.getElementById('password-match-error').innerText = 'Passwords do not match';
  }
  document.getElementById('password-match-error').style.display = 'block';
} else {
  document.getElementById('password-match-error').style.display = 'none';
}
})
</script>

