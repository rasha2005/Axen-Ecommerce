<%- include('../layouts/header.ejs') %>

<div class="container" >
    <div class="row ">
        <div class="col-lg-7 margin-right-4">
            <div class="new-customers ml-50">
                <form method="post" onsubmit="return validateForm()">
                    <h6 class="widget-title border-left mb-10">NEW CUSTOMERS</h6>
                    <div class="login-account p-30 box-shadow">
                        <% if(typeof message !== 'undefined'){ %>
                            <% if (message === 'Please enter valid values for all fields') { %>
                                <p style="color: red;"><%= message %></p>
                            
                            <% } %>
                        <% } %>
                        <div class="row">
                            <div class="col-sm-12" >
                                <input type="text" name="name" placeholder="First Name" >
                               
                            </div>
                            <div class="col-sm-12">
                                <input type="email" class="input-field" name="email" placeholder="Email address here..."  >
                                <% if(typeof message !== 'undefined'){ %>
                                    <% if (message === 'Invalid email address') { %>
                                        <p style="color: red;"><%= message %></p>
                                    
                                    <% } %>
                                <% } %>
                            
                            </div>
                            
                            <div class="col-sm-12">
                                <input type="text" name="mobile" placeholder="Phone here..." >
                                <% if(typeof message !== 'undefined'){ %>
                                    <% if (message === 'Mobile number must be exactly 10 digits') { %>
                                        <p style="color: red;"><%= message %></p>
                                    
                                    <% } %>
                                <% } %>
                            </div>
                        </div>
                        <input type="password" name="password" placeholder="Password" >
                        <% if(typeof message !== 'undefined'){ %>
                            <% if (message === 'Password must be atleast 6 digits' || message === 'Password must contain at least one special character') { %>
                                <p style="color: red;"><%= message %></p>
                            
                            <% } %>
                        <% } %>
                  
                        <div class="row">
                            <div class="col-md-12">
                                <input class="submit-btn-1 mt-20 btn-hover-1" type="submit" value="Register">
                            </div>
                        </div>
                        <% if(typeof message !== 'undefined'){ %>
                            <% if (message === 'email already in use') { %>
                                <p style="color: red;"><%= message %></p>
                            
                            <% } %>
                        <% } %>
                    </div>
                </form>
</div>
</div>
</div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-4">

            <img src="/catimages/1707805781320-Futuristic Style LED Gaming Headphones - Aalamey.jpeg" alt="">

        </div>
    </div>

</div>

