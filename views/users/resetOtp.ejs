<%- include('../layouts/header.ejs') %>

<div class="form-container">
<style>
    /* CSS styles */
    .form-container {
        width: 100%; 
        margin-top: 100px;
        margin-bottom: 60px; /* Ensure the container spans the entire width */
    }

    .form-container form {
        width: 300px;
        margin: 0 auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column; /* Align items in a column */
    }

    .form-container input[type="text"] {
        width: calc(100% - 20px);
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .form-container button {
        width: 50%; /* Set button width */
        margin: 0 auto; /* Center the button horizontally */
        padding: 10px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        background-color: #6c757d;
        color: #fff;
    }

    .form-container button:hover {
        opacity: 0.9;
    }

    .d-none {
        display: none;
    }
</style>

<form action="/resetOtpValidation" method="post"> <!-- Updated action -->
    <input type="text" placeholder="Enter OTP" name="otp" class="otp">
    <% if (typeof message !== 'undefined') { %>
        
            <p style="color: rgb(230, 22, 22);" id="paragraph"><%= message %></p>
        <% } %>
    <button type="submit">Continue</button>
</form>
</div>

<%- include('../layouts/footer.ejs') %>
