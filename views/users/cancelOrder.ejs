            <div class="row">
                
                        <!-- checkout end -->
                        <!-- order-complete start -->
                       
                                    <!-- our order -->
                                    <div class="col-md-8">
                                        <!-- our order -->
                                        <div class="payment-details pl-10 mb-50">
                                            <h6 class="widget-title border-left mb-20">your order</h6>
                                            <table >
                                                
                                                    <tr>
                                                        <td style="color: black;">
                                                                    
                                                                       
